    let isRunning = false;

    function startAsciiAnimation() {
        if (isRunning) return; // Prevent starting multiple intervals
        isRunning = true; // Set isRunning to true to allow the animation to start

        const container = document.getElementById('ascii-container');
        if (!container) {
            console.error("Container element not found.");
            return;
        }

        let intervalId = setInterval(() => {
            if (!isRunning) return;

            // Clear previous content
            container.innerHTML = '';

            // Render the ASCII art with animation
            asciiArt.forEach((line, lineIndex) => {
                const lineElement = document.createElement('div');
                lineElement.textContent = line.join('');
                container.appendChild(lineElement);

                // Toggle characters for dynamic effects
                asciiArt[lineIndex] = line.map((char) => {
                    if (char === '@') return '*'; // Change '@' to '*'
                    if (char === '*') return '@'; // Change '*' to '@'
                    return char; // Leave other characters unchanged
                });
            });
        }, 500);
    }

    startAsciiAnimation();

    function stopAsciiAnimation() {
        isRunning = false;
        clearInterval(intervalId);
        console.log("Animation stopped.");
    }

    function toggleAsciiAnimation() {
        if (isRunning) {
            stopAsciiAnimation();
        } else {
            startAsciiAnimation();
        }
    }

    // Add keypress listener
    document.addEventListener("keyup", (event) => {
        if (event.key.toLowerCase() === "q") {
            stopAsciiAnimation();
        }
        if (event.key.toLowerCase() === "s") {
            startAsciiAnimation();
        }
        if (event.key.toLowerCase() === "t") {
            toggleAsciiAnimation();
        }
    });
